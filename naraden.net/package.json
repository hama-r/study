{
  "name": "devenv",
  "version": "1.0.0",
  "description": "devenv",
  "main": "index.html",
  "scripts": {
    "gulp": "gulp",
    "build": "npm run build:pug & npm run build:scss && npm run build:autoprefixer",
    "build:pug": "pug src --hierarchy -o dist -P",
    "build:scss": "node-sass ./src/scss --output ./dist/css --output-style compressed --sourceMap true",
    "build:autoprefixer": "postcss ./dist/css/*.css --use autoprefixer --no-map -d ./dist/css/",
    "watch": "npm-run-all -p watch:*",
    "watch:pug": "pug src --hierarchy -o dist -P -w",
    "watch:scss": "node-sass ./src/scss --output ./dist/css --output-style compressed --sourceMap true -r -w",
    "watc:autoprefixer": "postcss ./dist/css/*.css --use autoprefixer --no-map -d ./dist/css/ -w",
    "dev": "lite-server -c bs-config.json",
    "imagemin": "node imagemin.js",
    "svgbuild": "gulp svgbuild",
    "webpack": "webpack --watch",
    "webpack:prod": "webpack --mode=production"
  },
  "author": "ibis",
  "license": "ISC",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.6.4",
    "jquery": "^3.4.1",
    "pug": "^2.0.4",
    "pug-cli": "github:pugjs/pug-cli#master",
    "slick-carousel": "^1.8.1",
    "smooth-scroll": "^16.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.9.5",
    "autoprefixer": "^9.1.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "bulma": "^0.7.2",
    "cpx": "^1.5.0",
    "eslint": "^5.3.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-pug": "^1.1.1",
    "eslint-plugin-standard": "^3.1.0",
    "gulp": "^4.0.0",
    "gulp-cheerio": "^0.6.3",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^2.0.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-template": "^5.0.0",
    "imagemin": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "lite-server": "^2.5.4",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "postcss-cli": "^6.1.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
